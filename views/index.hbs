{{#section 'head'}}
    <title>Chat</title>
    <style>
        * { maargin:0; padding:0; box-sizing:border-box;}
        body { font: 13px Helvetica, Arial; }
        form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
        form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
        form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
        #messages { list-style-type: none; margin: 0; padding: 0; }
        #messages li { padding: 5px 10px; }
        #messages li:nth-child(odd) { background: #eee; }
    </style>
{{/section}}

<div><input type="text" id="passw-encr" value="This is not the password" /></div>
<div><input type="text" id="username" value="Username" /></div>
<ul id="messages"></ul>
<form action="">
    <input id="m" autocomplete="off" /><button id="btn">Send</button>
</form>

{{#section 'scripts'}}
    <script type="text/javascript" src="https://cdn.rawgit.com/ricmoo/aes-js/e27b99df/index.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.8.js"></script>
    <script src="/javascripts/sha256.min.js"></script>
    <script>
        var socket = io();

        var message = $('#m');
        var username = $('#username');

        var pass = $('#passw-encr');

        $('#btn').on('click', function(event) {
            event.preventDefault();

            var key = aesjs.utils.hex.toBytes(sha256(pass.val()));

            var aesCtr = new aesjs.ModeOfOperation.ctr(key, new aesjs.Counter());

            socket.emit('chat message', {
                msg: aesjs.utils.hex.fromBytes(aesCtr.encrypt(aesjs.utils.utf8.toBytes(message.val()))),
                from: username.val(),
            });

            message.val('');
            return false;
        });

        socket.on('chat message', function(obj) {
            var key = aesjs.utils.hex.toBytes(sha256(pass.val()));

            var aesCtr = new aesjs.ModeOfOperation.ctr(key, new aesjs.Counter());

            $('#messages').append($('<li>').text(
                    obj.from + '> ' + aesjs.utils.utf8.fromBytes(aesCtr.decrypt(aesjs.utils.hex.toBytes(obj.msg)))
            ));
        })
    </script>
{{/section}}